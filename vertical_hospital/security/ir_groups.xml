<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="vertical_hospital_category">
            <field name="name">Hospital Management</field>
            <field name="sequence">14</field>
        </record>

        <record id="group_hospital_doctor" model="res.groups">
            <field name="name">Patient</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="vertical_hospital.vertical_hospital_category"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_patient" model="res.groups">
            <field name="name">External users</field>
            <field name="category_id" ref="vertical_hospital.vertical_hospital_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
        </record>


    </data>
</odoo>