<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="treatment_form_view" model="ir.ui.view">
        <field name="name">treatment.form.view</field>
        <field name="model">hospital.treatment</field>
        <field name="arch" type="xml">
            <form string="Treatment">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="doctor"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="treatment_tree_view" model="ir.ui.view">
        <field name="name">treatment.tree.view</field>
        <field name="model">hospital.treatment</field>
        <field name="arch" type="xml">
            <tree string="Treatment">
                <field name="code"/>
                <field name="name"/>
                <field name="doctor"/>
            </tree>
        </field>
    </record>


    <record id="treatment_act_window" model="ir.actions.act_window">
        <field name="name">Treatment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.treatment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no Treatment yet, click here in new button for create treatments.
            </p>
        </field>
    </record>


</odoo>